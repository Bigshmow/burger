$(".delBurger").on("click", function(event){
    var id = $(this).data("burgerid");
    $.ajax("/api/burgers/" + id, {
        type: "DELETE"}).then(
            function() {
                console.log("Deleted id ", id);
                location.reload();
            }
        )
    });

$("#addBurger").on("submit", function(event) {
    event.preventDefault();
    var newBurger = {
      burger_name: $("#addBurger [name=burger_name]").val().trim(),
      devoured: 0,
    };
    $.ajax("/api/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("added new burger");
        location.reload();
      }
    );
  });

$(".devBurger").on("click", function(event) {
    event.preventDefault();
    audio.play();
    var id = $(this).data("burgerid");
  console.log(audio);
    {{!-- alert("That is a tasty burger!"); --}}

    var updateDevour = {
      devoured: 1
};
    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: updateDevour
    }).then(
      function() {
        console.log("updated id ", id);
        location.reload();
      }
    );
  });

</script>