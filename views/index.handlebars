<p>Awaiting your belly!</p>
<ul>
  {{#each burger}}
        {{#unless this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}} {{this.devoured}}

        <button data-burgerid="{{this.id}}" class="delBurger">Delete</button>
        <button data-burgerid="{{this.id}}" class="devBurger">Devour</button>
      </p>
    </li>
{{else}}
        {{/unless}}
  {{/each}}
</ul>

<p>Devoured</p>

<ul>
  {{#each burger}}
        {{#if this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}} {{this.devoured}}

        <button data-burgerid="{{this.id}}" class="delBurger">Delete</button>
        <button data-burgerid="{{this.id}}" class="devBurger">Devour</button>
      </p>
    </li>
{{else}}
        {{/if}}
  {{/each}}
</ul>

<h2>Add a burger to devour!!!</h2>
<form id="addBurger" class="button-size">
	<textarea type="text" name="burger_name"></textarea>
	<button type="submit">Send your order</button>
</form>

<script type="text/javascript">
