<div class="row">

<div class="col-sm-12">
<p class="text-center">Eat-Da-Burger!!</p>
</div>
<div class="col-sm-6 text-right">

<p>Awaiting your belly:</p>
<ul>
  {{#each burger}}
        {{#unless this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
        <button data-burgerid="{{this.id}}" class="devBurger">Devour it!</button>
      </p>
    </li>
{{else}}
        {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm-6 text-left">
<p>Devoured:</p>
<ul>
  {{#each burger}}
        {{#if this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
      </p>
    </li>
{{else}}
        {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
<div class="col-sm-12 text-center">

<h2>Add a burger to devour!!!</h2>
<form id="addBurger" class="button-size">
	<textarea type="text" name="burger_name"></textarea>
    <br>
    <button type="submit">Send your order</button>
</form>

</div>
</div>
<script type="text/javascript">

var audio = new Audio("/assets/tastyBurger.mp3");

$("#addBurger").on("submit", function(event) {
    event.preventDefault();
    var newBurger = {
      burger_name: $("#addBurger [name=burger_name]").val().trim(),
      devoured: 0,
    };
    $.ajax("/api/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("added new burger");
        location.reload();
      }
    );
  });
$(".devBurger").on("click", function(event) {
    event.preventDefault();
    audio.play();
    var id = $(this).data("burgerid");
    var updateDevour = {
      devoured: 1
};
    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: updateDevour
    }).then(
      function() {
        console.log("updated id ", id);
        setTimeout(function() {
        location.reload();}, 4500);

        });
  });
</script>